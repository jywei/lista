<h2>Registration</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <%= f.input :firstname, required: true,
      label: false, placeholder: "First Name" %>
  <%= f.input :lastname, required: true,
      label: false, placeholder: "Last Name" %>
  <%= f.input :username, required: true,
      label: false, placeholder: "Username" %>
  <%= f.input :email, required: true,
      label: false, placeholder: "Email" %>
  <%#= f.input :city, required: true,
      label: false, placeholder: "City" %>
  <%#= f.input :state_provence, required: true,
      label: false, placeholder: "State/Provence" %>
  <%= f.input :password, required: true,
      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
      label: false, placeholder: "Choose a Password" %>
  <%= f.input :password_confirmation,
      required: true, label: false, placeholder: "Confirm Password" %>
  <%= f.button :submit, "Sign Up", class: "btn-primary" %>
<% end %>


<%= render "devise/shared/links" %>

<div class="breadcrumbs">
  <div class="container">
    <div class="row">
      <div class="col-lg-4 col-sm-4">
        <h1>
          Hey <%= @user.username%>
        </h1>
      </div>
    </div>
  </div>
</div>

<div class='container'>
  <div class="well col-md-10 col-md-offset-1">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <%= f.input :firstname, required: true,
          label: false, placeholder: "First Name" %>
      <%= f.input :lastname, required: true,
          label: false, placeholder: "Last Name" %>
      <%= f.input :username, required: true,
          label: false, placeholder: "Username" %>
      <%= f.input :email, required: true,
          label: false, placeholder: "Email" %>
      <%= f.input :city, required: true,
          label: false, placeholder: "City" %>
      <%= f.input :country, required: true,
          label: false, placeholder: "State/Provence/Country" %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <%= f.input :current_password, required: true,
      label: "Enter Your Current Password To Save Any Changes" %>

      <%= f.input :password, autocomplete: "off", required: false,
          label: "Wanna New Password?  Enter it here." %>
      <%= f.input :password_confirmation, required: false,
          label: "Confirm Your New Password." %>
      <%= f.button :submit, "Update" %>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Back", :back %>
  </div>
</div>
